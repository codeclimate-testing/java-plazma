
    <entity xmlns="http://plazmaforge.org/erm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="TaskWorkerLink" class="org.plazmaforge.bsolution.project.common.beans.TaskWorkerLink" table="TASK_WORKER_LINK">
