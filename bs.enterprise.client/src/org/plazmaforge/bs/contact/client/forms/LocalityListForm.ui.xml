<ui xmlns="http://plazmaforge.org/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<form name="LocalityListForm" type="ListForm" title="@{LocalityListForm.title}">
		<content layout="FitLayout">
			<children>
				<table>
					<columns>
						<column text="@{LocalityListForm.nameColumn.text}" property="name" data-type="String" width="200"/>
						<column text="@{LocalityListForm.regionColumn.text}" property="regionName" data-type="String" width="200"/>
						<column text="@{LocalityListForm.countryColumn.text}" property="countryName" data-type="String" width="200"/>
					</columns>
				</table>
			</children>
		</content>
	</form>
</ui>