<ui xmlns="http://plazmaforge.org/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<form name="TaskTypeEditForm" type="EditForm" title="@{TaskTypeEditForm.title}">
		<content layout="GridLayout(columnCount=2)">
			<children>
				<label text="@{TaskTypeEditForm.codeLabel.text}"/><text-field property="code" width="100"/>
				<label text="@{TaskTypeEditForm.nameLabel.text}"/><text-field property="name" width="200"/>
				<label text="@{TaskTypeEditForm.descriptionLabel.text}"/><text-area property="description" width="200"/>
			</children>
		</content>
	</form>
</ui>