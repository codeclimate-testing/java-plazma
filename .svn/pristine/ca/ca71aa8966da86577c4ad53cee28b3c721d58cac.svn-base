package org.plazmaforge.bsolution.personality.common.beans;

import org.plazmaforge.bsolution.base.common.beans.Language;


/**
 * @author Oleh Hapon
 * Date: 26.09.2004
 * Time: 14:57:03
 * $Id: PersonLanguage.java,v 1.2 2010/04/28 06:24:20 ohapon Exp $
 */
public class PersonLanguage extends AbstractPersonableItem {

    private Language language;
    private boolean easy;


    public Language getLanguage() {
        return language;
    }
    
    public void setLanguage(Language language) {
        this.language = language;
    }
    
    public String getLanguageName() {
        return getLanguage() == null ? null : getLanguage().getName();
    }
    
    
    public boolean isEasy() {
        return easy;
    }

    public void setEasy(boolean easy) {
        this.easy = easy;
    }

}
