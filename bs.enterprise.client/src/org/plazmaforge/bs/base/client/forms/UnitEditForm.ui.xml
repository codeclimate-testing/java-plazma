<ui xmlns="http://plazmaforge.org/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<form name="UnitEditForm" type="EditForm" title="@{UnitEditForm.title}">
		<content layout="GridLayout(columnCount=2)">
			<children>
				<label text="@{UnitEditForm.codeLabel.text}"/><text-field property="code"  width="100"/>
				<label text="@{UnitEditForm.nameLabel.text}"/><text-field property="name" width="100"/>
				<label text="@{UnitEditForm.fullNameLabel.text}"/><text-field property="fullName" width="200"/>
			</children>
		</content>
	</form>
</ui>