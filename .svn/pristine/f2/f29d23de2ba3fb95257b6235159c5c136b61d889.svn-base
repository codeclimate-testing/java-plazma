	<form name="ProjectTypeEditForm" type="EditForm" title="@{ProjectTypeEditForm.title}">
		<content layout="GridLayout(columnCount=2)">
			<children>
				<label text="@{ProjectTypeEditForm.codeLabel.text}"/><text-field property="code" width="100"/>
				<label text="@{ProjectTypeEditForm.nameLabel.text}"/><text-field property="name" width="200"/>
				<label text="@{ProjectTypeEditForm.descriptionLabel.text}"/><text-area property="description" width="200"/>
			</children>
		</content>
	</form>
</ui>