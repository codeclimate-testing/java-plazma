package org.plazmaforge.bsolution.product.common.beans;

import java.io.Serializable;


/**
 * @author Oleh Hapon
 * $Id: ProductInfo.java,v 1.4 2010/04/28 06:24:21 ohapon Exp $
 */

public class ProductInfo implements Serializable {

    private String type;
	
    private double incomeQuantity;
	
    private double outcomeQuantity;
	
    private double incomeAmount;
	
    private double outcomeAmount;

    
    
    private double expectedQuantity;
    
    private double reservedQuantity;

    
    
    
    public double getIncomeAmount() {
        return incomeAmount;
    }

    public void setIncomeAmount(double incomeAmount) {
        this.incomeAmount = incomeAmount;
    }

    public double getIncomeQuantity() {
        return incomeQuantity;
    }

    public void setIncomeQuantity(double incomeQuantity) {
        this.incomeQuantity = incomeQuantity;
    }

    public double getOutcomeAmount() {
        return outcomeAmount;
    }

    public void setOutcomeAmount(double outcomeAmount) {
        this.outcomeAmount = outcomeAmount;
    }

    public double getOutcomeQuantity() {
        return outcomeQuantity;
    }

    public void setOutcomeQuantity(double outcomeQuantity) {
        this.outcomeQuantity = outcomeQuantity;
    }

    public String getType() {
        return type;
    }

    public void setType(String type) {
        this.type = type;
    }
    
    
    public void addIncomeQuantity(double quantity) {
	this.incomeQuantity += quantity;
    }
    
    public void addOutcomeQuantity(double quantity) {
	this.outcomeQuantity += quantity;
    }
    
    
    
    public void addIncomeAmount(double amount) {
	this.incomeAmount += amount;
    }
    
    public void addOutcomeAmount(double amount) {
	this.outcomeAmount += amount;
    }

    public double getExpectedQuantity() {
        return expectedQuantity;
    }

    public void setExpectedQuantity(double expectedQuantity) {
        this.expectedQuantity = expectedQuantity;
    }

    public double getReservedQuantity() {
        return reservedQuantity;
    }

    public void setReservedQuantity(double reservedQuantity) {
        this.reservedQuantity = reservedQuantity;
    }
    
    
}
