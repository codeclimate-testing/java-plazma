package org.plazmaforge.framework.client.swing.gui.table;

/**
 * @author Oleh Hapon
 * Date: 8.10.2003
 * Time: 13:59:16
 */
public class ColumnProperty {

    public static final int MAX_COLUMN_WIDTH = 50;
	
    public static final int MIN_COLUMN_WIDTH = 10;

    protected String name;          // Column name
	
    protected String fieldName;     // Field name (for object model)

    protected String className;     // Class name (for load from external properties)

    protected Class columnClass;    // Column class

    protected int size;

    public ColumnProperty() {
    }

    public ColumnProperty(String name) {
        this.name = name;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getFieldName() {
        return fieldName;
    }

    public void setFieldName(String fieldName) {
        this.fieldName = fieldName;
    }

    public String getClassName() {
        return className;
    }

    public void setClassName(String className) {
        this.className = className;
    }

    public Class getColumnClass() {
        return columnClass;
    }

    public void setColumnClass(Class columnClass) {
        this.columnClass = columnClass;
    }

    public int getSize() {
        return size;
    }

    public void setSize(int size) {
        this.size = size;
    }
}
